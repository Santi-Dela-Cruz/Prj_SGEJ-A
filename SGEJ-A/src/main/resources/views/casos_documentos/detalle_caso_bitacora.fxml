                        <Label text="Título:" GridPane.rowIndex="0" GridPane.columnIndex="2" style="-fx-font-weight: bold; -fx-text-fill: #4b5563; -fx-font-size: 14px; -fx-font-family: 'Segoe UI', Arial, sans-serif;" />
