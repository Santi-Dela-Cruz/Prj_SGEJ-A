                        <Label text="Tipo:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-weight: bold; -fx-text-fill: #4b5563; -fx-font-size: 14px; -fx-font-family: 'Segoe UI', Arial, sans-serif;" />
